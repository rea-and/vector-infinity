{
  "openapi": "3.1.0",
  "info": {
    "title": "Gmail Work Context API",
    "description": "Access work Gmail data for context in ChatGPT conversations",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "YOUR_SERVER_URL",
      "description": "Your Vector Infinity server URL"
    }
  ],
  "paths": {
    "/api/plugins/gmail_work/context": {
      "get": {
        "operationId": "getGmailWorkContext",
        "summary": "Get work Gmail context",
        "description": "Retrieve work Gmail emails as context for the conversation",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of emails to return",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 50,
              "minimum": 1,
              "maximum": 200
            }
          },
          {
            "name": "days",
            "in": "query",
            "description": "Number of days to look back",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 30,
              "minimum": 1,
              "maximum": 365
            }
          },
          {
            "name": "query",
            "in": "query",
            "description": "Optional text search in email content",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Gmail context data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/api/plugins/gmail_work/search": {
      "get": {
        "operationId": "searchGmailWork",
        "summary": "Search work Gmail",
        "description": "Search work Gmail emails by text",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Search query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of results",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}

