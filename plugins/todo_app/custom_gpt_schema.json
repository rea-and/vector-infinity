{
  "openapi": "3.1.0",
  "info": {
    "title": "TODO App Context API",
    "description": "Access TODO list items for context in ChatGPT conversations",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "YOUR_SERVER_URL",
      "description": "Your Vector Infinity server URL"
    }
  ],
  "paths": {
    "/api/plugins/todo_app/context": {
      "get": {
        "operationId": "getTodoContext",
        "summary": "Get TODO items context",
        "description": "Retrieve TODO list items as context for the conversation",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of items to return",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 50,
              "minimum": 1,
              "maximum": 200
            }
          },
          {
            "name": "days",
            "in": "query",
            "description": "Number of days to look back",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 30,
              "minimum": 1,
              "maximum": 365
            }
          }
        ],
        "responses": {
          "200": {
            "description": "TODO context data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/api/plugins/todo_app/search": {
      "get": {
        "operationId": "searchTodos",
        "summary": "Search TODO items",
        "description": "Search TODO items by text",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Search query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}

