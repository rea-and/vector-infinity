{
  "openapi": "3.1.0",
  "info": {
    "title": "Gmail Personal Context API",
    "description": "Access personal Gmail data for context in ChatGPT conversations",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://vectorinfinity.com/",
      "description": "Your Vector Infinity server URL"
    }
  ],
  "paths": {
    "/api/plugins/gmail_personal/context": {
      "get": {
        "operationId": "getGmailPersonalContext",
        "summary": "Get personal Gmail context",
        "description": "Retrieve personal Gmail emails as context for the conversation. Use pagination (offset parameter) to get more results. For 1000 emails, make multiple calls: offset=0, offset=100, offset=200, etc.",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of emails to return (recommended: 10-50 for best performance)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20,
              "minimum": 1,
              "maximum": 100
            }
          },
          {
            "name": "days",
            "in": "query",
            "description": "Number of days to look back (recommended: 7-30 for best performance)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 30,
              "minimum": 1,
              "maximum": 365
            }
          },
          {
            "name": "query",
            "in": "query",
            "description": "Optional text search in email content",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Pagination offset (use with limit to get more results, e.g., offset=0 for first 100, offset=100 for next 100)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0,
              "minimum": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Gmail context data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "plugin_name": {
                      "type": "string",
                      "description": "Name of the plugin"
                    },
                    "count": {
                      "type": "integer",
                      "description": "Number of items in this response"
                    },
                    "total": {
                      "type": "integer",
                      "description": "Total number of items available (for pagination)"
                    },
                    "offset": {
                      "type": "integer",
                      "description": "Current pagination offset"
                    },
                    "limit": {
                      "type": "integer",
                      "description": "Current limit"
                    },
                    "has_more": {
                      "type": "boolean",
                      "description": "Whether there are more items available (use offset to get next page)"
                    },
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {"type": "integer"},
                          "type": {"type": "string"},
                          "title": {"type": "string"},
                          "content": {"type": "string"},
                          "metadata": {"type": "object"},
                          "created_at": {"type": "string"},
                          "source_timestamp": {"type": "string"}
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/plugins/gmail_personal/search": {
      "get": {
        "operationId": "searchGmailPersonal",
        "summary": "Search personal Gmail",
        "description": "Search personal Gmail emails by text",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Search query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of results (recommended: 10-20 for best performance)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10,
              "minimum": 1,
              "maximum": 50
            }
          },
          {
            "name": "days",
            "in": "query",
            "description": "Number of days to look back",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 30,
              "minimum": 1,
              "maximum": 365
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "plugin_name": {
                      "type": "string",
                      "description": "Name of the plugin"
                    },
                    "query": {
                      "type": "string",
                      "description": "The search query that was used"
                    },
                    "count": {
                      "type": "integer",
                      "description": "Number of items found"
                    },
                    "items": {
                      "type": "array",
                      "description": "Array of matching email items",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer",
                            "description": "Item ID"
                          },
                          "type": {
                            "type": "string",
                            "description": "Item type (e.g., 'email')"
                          },
                          "title": {
                            "type": "string",
                            "description": "Email subject"
                          },
                          "content": {
                            "type": "string",
                            "description": "Email content"
                          },
                          "metadata": {
                            "type": "object",
                            "description": "Additional metadata about the email"
                          },
                          "created_at": {
                            "type": "string",
                            "format": "date-time",
                            "description": "When the item was created in the database"
                          },
                          "source_timestamp": {
                            "type": "string",
                            "format": "date-time",
                            "description": "Original timestamp from Gmail"
                          }
                        },
                        "required": ["id", "type", "title"]
                      }
                    }
                  },
                  "required": ["plugin_name", "query", "count", "items"]
                }
              }
            }
          }
        }
      }
    }
  }
}

