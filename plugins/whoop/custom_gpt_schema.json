{
  "openapi": "3.1.0",
  "info": {
    "title": "Whoop Health Data Context API",
    "description": "Access Whoop health and fitness data for context in ChatGPT conversations",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "YOUR_SERVER_URL",
      "description": "Your Vector Infinity server URL"
    }
  ],
  "paths": {
    "/api/plugins/whoop/context": {
      "get": {
        "operationId": "getWhoopContext",
        "summary": "Get Whoop health data context",
        "description": "Retrieve Whoop health, recovery, sleep, and workout data as context",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of items to return",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 50,
              "minimum": 1,
              "maximum": 200
            }
          },
          {
            "name": "days",
            "in": "query",
            "description": "Number of days to look back",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 30,
              "minimum": 1,
              "maximum": 365
            }
          },
          {
            "name": "item_type",
            "in": "query",
            "description": "Filter by type: health_data",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Whoop context data",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/api/plugins/whoop/search": {
      "get": {
        "operationId": "searchWhoop",
        "summary": "Search Whoop data",
        "description": "Search Whoop health data by text",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Search query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}

